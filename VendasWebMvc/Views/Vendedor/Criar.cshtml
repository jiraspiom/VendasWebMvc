@model VendasWebMvc.Models.Vendedor

@{
    ViewData["Criar"] = "Criar"; 
 }

<h2>@ViewData["Criar"]</h2>

<h4>Vendedor</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SalarioBase" class="control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn-default" />
            </div>

        </form>

    </div>
</div>